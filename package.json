{
  "name": "genaiexperiments",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "vite --mode development",
    "dev:integration": "vite --mode integration",
    "dev:prod": "vite --mode production",
    "build": "vite build",
    "build:local": "vite build --mode development",
    "build:integration": "vite build --mode integration",
    "build:prod": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:setup": "node src/db/setup.js",
    "db:seed": "psql -d planning_db -U planning_user -f src/db/seed.sql",
    "db:reset": "dropdb planning_db && createdb planning_db && npm run db:setup && npm run db:seed",
    "db:reset-projects": "node src/db/reset_projects.js",
    "db:setup-full": "node src/db/setup_database.js",
    "server": "node server/index.js",
    "dev:all": "concurrently \"npm run dev:local\" \"npm run server\""
  },
  "dependencies": {
    "axios": "^1.8.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pg": "^8.14.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.3.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jsdom": "^24.0.0",
    "vite": "^6.2.0",
    "vitest": "^1.3.1"
  }
}
